<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xie.myblog.dao.CountDao">

    <select id="selectCount" resultType="com.xie.myblog.po.Count">
        select * from `count`
    </select>

    <update id="addCount">
        update `count` set `counts` = `counts`+1
    </update>

</mapper>
